<%= form_with model: [:admin, @bage], local: true do |form| %>
  <%= render 'shared/errors', resource: @test %>

  <div class="form-group row" style="width: 400px;">
    <%= form.label :name, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row" style="width: 400px;">
    <%= form.label :rule, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10 ">
      <%= form.collection_select :rule_id, Rule.all, :id, :title, prompt: true, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-10 ">
      <%= form.submit nil, class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
