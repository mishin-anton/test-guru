<tr>
  <td>
    <% if bage.img_filename == 'bage' %>
      <img src="/assets/badge.png" style="width: 50px; height: 50px;">
    <% end %>
  </td>
  <td>
    <%= bage.name %>
  </td>
  <td>
    <%= bage.rule.title %>
  </td>

  <% current_user.bage_passages.each do |b| %>
    <% if bage.rule.title == b.bage.rule.title  %>
      <td>Y</td>
    <% end %>
  <% end %>
</tr>
