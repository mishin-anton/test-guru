<h2>Форма обратной связи</h2>

<%= form_with model: @post, local: true do |form| %>
  <%= render 'shared/errors', resource: @post %>

  <div class="form-group row">

    <div class="col-sm-2 col-form-label">
      <%= form.label :name %>
    </div>
    <div class="col-sm-10">
      <%= form.text_field :name, id: :post_name %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2 col-form-label">
      <%= form.label :email %>
    </div>
    <div class="col-sm-10">
      <%= form.email_field :email, id: :post_email %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2 col-form-label">
      <%= form.label :message %>
    </div>
    <div class="col-sm-10">
      <%= form.text_area :message, id: :post_message, size: "40x5" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-10">
        <%= form.submit "Send" %>
    </div>
  </div>

<% end %>




